<h1>Update <%-username%></h1>
<form method="POST" action="">
  <div class="interactive-block">
    <label for="username">New username</label
    ><input
      class="interactive"
      type="text"
      name="username"
      id="username"
      value="<%-username%>"
      required
      minlength="5"
    />
  </div>
  <input class="interactive" type="submit" value="Submit" />
</form>
<form method="POST" action="">
  <div class="interactive-block">
    <label for="username">New password</label
    ><input
      class="interactive"
      type="password"
      name="password"
      id="password"
      required
      minlength="8"
    />
  </div>
  <input class="interactive" type="submit" value="Submit" />
</form>
